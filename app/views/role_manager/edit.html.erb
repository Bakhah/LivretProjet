<div class="page-header">
    <h1>
        Modifier le rôle de
        <%= get_user_full_name(@user_focused) %>
        <div class="btn btn-default btn-lg">
            <%= get_user_role(@user_focused) %>
        </div>
    </h1>
</div>
<h3>
    Veuillez définir un nouveau rôle pour
    <%= get_user_full_name(@user_focused) %>
</h3>

<%= link_to "Etudiant", role_manager_update_role_path(@user_focused, "student"), method: :patch, class: "btn btn-success btn-lg" %>
<%= link_to "Professeur", role_manager_update_role_path(@user_focused, "teacher"), method: :patch, class: "btn btn-warning btn-lg" %>
<%= link_to "Tuteur", role_manager_update_role_path(@user_focused, "tutor"), method: :patch, class: "btn btn-danger btn-lg" %>
