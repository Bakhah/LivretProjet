

<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :prénom %><br />
    <%= f.text_field :first_name, required: true, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :last_name, required: true, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, required: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmation_du_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, required: true, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "S'inscrire" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
