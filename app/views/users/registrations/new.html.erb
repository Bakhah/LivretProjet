<div class="col-xs-7">
<div class="page-header">
    <h2>Inscription</h2>
</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Prénom", class: "form-control" %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.text_field :last_name, required: true, autofocus: true, placeholder: "Nom", class: "form-control"  %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email", class: "form-control" %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Mot de passe (6 caractères minimum)", class: "form-control" %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: "Confirmation", class: "form-control" %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br>
    <div class="actions">
        <%= f.submit "S'inscrire", class: "btn btn-primary btn-lg" %>
        <%= render "users/shared/links" %>
    </div>
    <% end %>
</div>
<div class="col-xs-1">

</div>
<div class="col-xs-4">
  <h3>Se connecter</h3>
  <%= render "users/sessions/new_form" %>
</div>
