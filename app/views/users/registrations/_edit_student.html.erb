<h2>Modifier votre compte</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <%= f.text_field :first_name, placeholder: "Prénom", class: "form-control" %>
          <p class="help-block text-danger"></p>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <%= f.text_field :last_name, placeholder: "Nom", class: "form-control"  %>
          <p class="help-block text-danger"></p>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <%= f.text_field :address, placeholder: "Adresse", class: "form-control" %>
          <p class="help-block text-danger"></p>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <%= f.text_field :phone_number, placeholder: "Téléphone", class: "form-control" %>
          <p class="help-block text-danger"></p>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          <p class="help-block text-danger"></p>
      </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <i>(Laissez la case vide pour ne pas le modifier)</i><br>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Confirmation du mot de passe", class: "form-control" %>
          <p class="help-block text-danger"></p>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caractères minimum</em>
          <% end %>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation du mot de passe", class: "form-control" %>
          <p class="help-block text-danger"></p>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
          <i>(Nous avons besoin de votre mot de passe actuel pour confirmer votre changement)</i><br>
          <%= f.password_field :current_password, autocomplete: "off", placeholder: "Mot de passe actuel", class: "form-control" %>
          <p class="help-block text-danger"></p>
      </div>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Êtes-vous sûr(e) de vouloir supprimer votre compte ?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
